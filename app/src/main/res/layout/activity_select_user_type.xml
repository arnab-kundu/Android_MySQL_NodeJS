<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_classic_models_db"
    tools:context=".classicmodelsdb.SelectUserTypeActivity">


    <Button
        android:id="@+id/button_employee_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="109dp"
        android:text="Login as Employee"
        android:onClick="employee_login"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_customer_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="144dp"
        android:layout_marginEnd="60dp"
        android:text="Login as Customer"
        android:onClick="customer_login"
        android:textAllCaps="false" />
</RelativeLayout>